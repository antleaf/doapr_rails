= form_for @platform do |f|
  - if @platform.errors.any?
    #error_explanation
      %h2= "#{pluralize(@platform.errors.count, "error")} prohibited this platform from being saved:"
      %ul
        - @platform.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :source_code
    = f.text_field :source_code
  .field
    = f.label :software_license
    = f.text_field :software_license
  .field
    = f.label :slug
    = f.text_field :slug
  .actions
    = f.submit 'Save'
