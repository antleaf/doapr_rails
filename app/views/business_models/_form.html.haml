= form_for @business_model do |f|
  - if @business_model.errors.any?
    #error_explanation
      %h2= "#{pluralize(@business_model.errors.count, "error")} prohibited this business_model from being saved:"
      %ul
        - @business_model.errors.full_messages.each do |message|
          %li= message
  %table.invisible-layout-table
    %tr
      %td.field-name
        Name:
      %td.field-value
        = f.text_field :name
    %tr
      %td.field-name
        Description:
      %td.field-value
        = f.text_field :description
  .actions
    = link_to 'Cancel', @business_model, :class => "btn btn-secondary btn-sm"
    = f.submit 'Save', :class => 'btn btn-success btn-sm'
