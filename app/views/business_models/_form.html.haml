= form_for @business_model do |f|
  - if @business_model.errors.any?
    #error_explanation
      %h2= "#{pluralize(@business_model.errors.count, "error")} prohibited this business_model from being saved:"
      %ul
        - @business_model.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :slug
    = f.text_field :slug
  .actions
    = f.submit 'Save'
