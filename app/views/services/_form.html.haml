= form_for @service do |f|
  - if @service.errors.any?
    #error_explanation
      %h2= "#{pluralize(@service.errors.count, "error")} prohibited this service from being saved:"
      %ul
        - @service.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :cost
    = f.number_field :cost
  .field
    = f.label :slug
    = f.text_field :slug
  .field
    = f.label :editorial
    = f.text_area :editorial
  .actions
    = f.submit 'Save'
