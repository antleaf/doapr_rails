%table{:class=>"sorted-table table table-condensed table-striped"}
  %thead
    %tr
      %th Name
      - if (policy(Discipline).edit?)|(policy(Discipline).destroy?)
        %th.actions Actions
  %tbody
    - discipline_list.each do |discipline|
      %tr
        %td.no-wrap
          %div.hover-over{style:"width:100%;"}
            = link_to discipline.name,discipline
        - if (policy(Discipline).edit?)|(policy(Discipline).destroy?)
          %td.actions
            - if policy(Discipline).edit?
              = link_to 'Edit', edit_discipline_path(discipline), :class => "btn btn-info btn-sm"
            - if policy(Discipline).destroy?# && controller.controller_name == "technologies"
              = link_to 'Delete', discipline, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-sm"
