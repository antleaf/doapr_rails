= form_for @discipline do |f|
  - if @discipline.errors.any?
    #error_explanation
      %h2= "#{pluralize(@discipline.errors.count, "error")} prohibited this discipline from being saved:"
      %ul
        - @discipline.errors.full_messages.each do |message|
          %li= message

  %table.invisible-layout-table
    %tr
      %td.field-name
        Name:
      %td.field-value
        = f.text_field :name
    -#%tr
    -#  %td.field-name
    -#    Editors' Comments:
    -#    %br
    -#    %i (not displayed to users)
    -#  %td.field-value
    -#    = f.text_area :editorial, :rows => 10, :class => 'editorial-comment-field'
  .actions
    = link_to 'Cancel', @discipline, :class => "btn btn-danger btn-sm"
    = f.submit 'Save', :class => 'btn btn-success btn-sm'