%table.invisible-layout-table
  %tr
    %td.field-name
      URL:
    %td.field-value
      = f.text_field :url
  %tr
    %td.field-name
      Full Name:
    %td.field-value
      = f.text_field :full_name
  %tr
    %td.field-name
      Short Name (or Acronym):
    %td.field-value
      = f.text_field :short_name
  %tr
    %td.field-name
      Description:
    %td.field-value
      = f.text_area :description, :rows => 3, :maxlength => "255"
  %tr
    %td.field-name
      Accepted Content Types:
    %td.field-value
      = f.text_field :accepted_content_types
  %tr
    %td.field-name
      Certificate or Labels:
    %td.field-value
      = f.text_field :certificate_or_labels
  %tr
    %td.field-name
      Closure Date:
    %td.field-value
      = f.text_field :closure_date
  %tr
    %td.field-name
      Contact:
    %td.field-value
      = f.text_field :contact
  %tr
    %td.field-name
      Disciplinary Scope:
    %td.field-value
      = f.text_field :disciplinary_scope
  %tr
    %td.field-name
      Keywords:
    %td.field-value
      = f.text_field :keywords
  %tr
    %td.field-name
      Launch Date:
    %td.field-value
      = f.text_field :launch_date
  %tr
    %td.field-name
      OAI-PMH URL:
    %td.field-value
      = f.text_field :oai_pmh_url
  %tr
    %td.field-name
      OpenDOAR ID:
    %td.field-value
      = f.text_field :opendoar_id
  %tr
    %td.field-name
      Platform:
    %td.field-value
      = f.text_field :platform
  %tr
    %td.field-name
      Platform Languages:
    %td.field-value
      = f.text_field :platform_languages
  %tr
    %td.field-name
      Record Count:
    %td.field-value
      = f.text_field :record_count
  %tr
    %td.field-name
      Repository Type:
    %td.field-value
      = f.text_field :repository_type
  %tr
    %td.field-name
      Service Pricing:
    %td.field-value
      = f.text_field :service_pricing
  %tr
    %td.field-name
      Status:
    %td.field-value
      - if @repository.new_record?
        = f.select "status_id", options_from_collection_for_select(Status.all, "id", "name",1)
      - else
        = f.select "status_id", options_from_collection_for_select(Status.all, "id", "name", @repository.status.id)
  %tr
    %td.field-name
      Terms of Use:
    %td.field-value
      = f.text_field :terms_of_use
  %tr
    %td.field-name
      Last Update:
    %td.field-value
      = f.text_field :last_update
  %tr
    %td.field-name
      Editorial Notes:
      %br
        %i (not displayed to users)
    %td.field-value
      -# = f.text_field :editorial_notes
      = f.text_area :editorial_notes, :rows => 3, :maxlength => "255", :class => 'editorial-comment-field'