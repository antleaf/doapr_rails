%table{:class=>"sorted-table table table-condensed table-striped"}
  %thead
    %tr
      %th Name
      %th Owner
      - if (policy(Repository).edit?)|(policy(Repository).destroy?)
        %th.actions Actions
  %tbody
    - repository_list.each do |repository|
      %tr
        %td.no-wrap
          %div.hover-over{style:"width:100%;"}
            = link_to repository.full_name,repository
            %span.hover-over-text= repository.description
        %td
          =repository.owner_full_name
        - if (policy(Repository).edit?)|(policy(Repository).destroy?)
          %td.actions
            - if policy(Repository).edit?
              -# = link_to 'Edit', edit_repository_path(repository), :class => "btn btn-info btn-sm"
              = link_to image_tag('icons/edit.png'),edit_repository_path(repository)
            - if policy(Repository).destroy?# && controller.controller_name == "technologies"
              = link_to 'Delete', repository, data: { turbo_confirm: 'Are you sure?' }
              = link_to 'Delete', repository, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-sm"
              = link_to image_tag('icons/delete.png'), repository, method: :delete, data: { confirm: 'Are you sure?' }
