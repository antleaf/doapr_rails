= form_for @function do |f|
  - if @function.errors.any?
    #error_explanation
      %h2= "#{pluralize(@function.errors.count, "error")} prohibited this function from being saved:"
      %ul
        - @function.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :slug
    = f.text_field :slug
  .actions
    = f.submit 'Save'
